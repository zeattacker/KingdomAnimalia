<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.android.kingdomanimalia">

    <application
        android:name=".AppHandler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PengantarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BelajarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ContentBelajarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuizActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LevelActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProgressActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>