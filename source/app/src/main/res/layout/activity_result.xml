<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/_50sdp"
    android:background="@drawable/background"
    tools:context="app.android.kingdomanimalia.ResultActivity">

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img_skor"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_225sdp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_skor"
        android:paddingTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="17dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_80sdp"
            android:id="@+id/imgBintang"
            android:background="@drawable/bg_bintang_2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Level 1"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@android:color/white"
            android:id="@+id/txtLevel"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Nilai : 75"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/txtNilai"
            android:textSize="@dimen/_30sdp"
            android:textColor="#fffc00"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <ImageButton
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/btnBackMenu"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/img_circle_menu"
        android:layout_alignTop="@+id/btnNextLevel"
        android:layout_toStartOf="@+id/btnNextLevel" />

    <ImageButton
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/img_circle_play"
        android:id="@+id/btnNextLevel"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/img_circle_replay"
        android:id="@+id/btnReplay"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignTop="@+id/btnNextLevel"
        android:layout_toEndOf="@+id/btnNextLevel" />
</RelativeLayout>
