<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="app.android.kingdomanimalia.ProgressActivity">

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/imageView5"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/img_progress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_progress"
        android:paddingTop="@dimen/_80sdp"
        android:paddingLeft="@dimen/_40sdp"
        android:paddingRight="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_50sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEVEL 1 :"
            android:id="@+id/textView"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEVEL 2 :"
            android:id="@+id/textView2"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/textView"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25sdp" />

        <ImageButton
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/imgBack"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_back"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />
        <ImageButton
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_29sdp"
            android:id="@+id/imgReset"
            android:background="@drawable/img_reset"
            android:layout_alignTop="@+id/imgBack"
            android:layout_alignEnd="@+id/imgBintang2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBintang1"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/img_progress_b1"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBintang2"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/img_progress_b1"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />
    </RelativeLayout>
</RelativeLayout>
